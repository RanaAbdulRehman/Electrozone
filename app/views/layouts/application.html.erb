
<!DOCTYPE html>
<html>
  <head>
    <title>Electrozone</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
        <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <a class="navbar-item">
          <%=image_tag("logo.png")%>
        </a>

        <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
          <%= link_to "Categories", categories_path, class: "navbar-item" %>
          <%= link_to "Brands", brands_path, class: "navbar-item" %>
          <%= link_to "Products", products_path, class: "navbar-item" %>  
        </div>
      </div>

      <div class="navbar-end">
        <div class="navbar-item">
          <div class="buttons">
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "navbar-item" %>
          </div>
        </div>
        </div>
      </div>
    </nav>
    <div style="float: right">
      <nav>
        <% if !user_signed_in?%>
            <%= link_to 'Sign Up',  new_user_registration_path  %>
            <%= link_to 'Sign In',  new_user_session_path  %>
        <% end%>
      </nav>
    </div>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
