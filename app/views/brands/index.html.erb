<p id="notice"><%= notice %></p>

<h1>Brands</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Slog</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.title %></td>
        <td><%= brand.slog %></td>
        <% if can? :read, brand%>
          <td><%= link_to 'Show', brand %></td>
        <% end%>
        <% if can? :edit, brand%>
          <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
        <% end%>
        <% if can? :delete, brand%>
          <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, Brand%>
  <%= link_to 'New Brand', new_brand_path %>
<% end%>