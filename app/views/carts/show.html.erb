<% @order_items.each do |item|%>
    <h3> <%= item.product.title%> </h3>
    <h5> <%= item.product.price%> </h5>

    <%= form_for item do |f|%>

        <%= f.hidden_field :product_id, :value => item.product.id%>
        <%= f.number_field :quantity, :value => item.quantity, min: 0, max: item.product.quantity%>
        <%= f.submit "Update Cart" %>

        <%= link_to "Remove Items", order_item_path(item), method: :delete%>
     <%end%>
    <h2>Subtotal: <%=item.total%></h2>
<%end%>

<h3> The Total value of your cart is : <%= current_order.subtotal%></h3>